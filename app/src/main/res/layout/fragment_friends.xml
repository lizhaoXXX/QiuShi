<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vip_divider_height"
    android:orientation="vertical"
    >


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/title_state_color"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@mipmap/qiu_shi_2"
            android:gravity="center"
            android:text="@string/me_personal"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/me_margin_top"
        android:background="@color/color_white"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/me_padding_start"
        android:elevation="1dp"
        >

        <ImageView
            android:id="@+id/iv_me_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@mipmap/demo_icon"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/iv_me_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_me_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonjour"
                android:textColor="@color/color_text_black"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总访客 0    今日 0"
                android:textColor="@color/vip_title_comment"
                android:textSize="12sp"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/me_margin_top"
        android:background="@color/color_white"
        android:paddingEnd="@dimen/me_padding_start"
        android:paddingStart="@dimen/me_padding_start"
        android:elevation="1dp"
        >

        <RelativeLayout
            android:id="@+id/rl_me_friend"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/me_padding_start"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/demo_icon"
                android:gravity="center"
                android:text="附近糗友"
                android:textColor="@color/color_text_black"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/me_new_shpae"
                android:gravity="center"
                android:text="new"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/rl_me_friend"
            android:layout_toStartOf="@+id/rl_me_store"
            android:orientation="horizontal"
            >


            <RelativeLayout
                android:id="@+id/rl_me_ground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableTop="@mipmap/demo_icon"
                    android:gravity="center"
                    android:text="群"
                    android:textColor="@color/color_text_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/me_new_shpae"
                    android:gravity="center"
                    android:text="new"
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableTop="@mipmap/demo_icon"
                    android:gravity="center"
                    android:text="小鸡"
                    android:textColor="@color/color_text_black"
                    android:textSize="14sp"
                    />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->

                <!--android:background="@drawable/me_new_shpae"-->
                <!--android:gravity="center"-->
                <!--android:text="new"-->
                <!--android:textColor="@color/color_white"-->
                <!--android:textSize="12sp"-->
                <!--android:textStyle="bold"-->
                <!--/>-->
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_me_store"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/me_padding_start"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/demo_icon"
                android:gravity="center"
                android:text="糗商城"
                android:textColor="@color/color_text_black"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/me_new_shpae"
                android:gravity="center"
                android:text="new"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                android:textStyle="bold"
                />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_me_scan"
        style="@style/me_text"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:text="扫码"
        />

    <TextView
        android:id="@+id/tv_me_popup"
        style="@style/me_text"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:text="popupWindow"
        />

    <TextView
        android:id="@+id/tv_me_bugly"
        style="@style/me_text"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:text="bugly"
        />

    <TextView
        android:id="@+id/tv_me_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:text="aaa"
        />
</LinearLayout>
</ScrollView>