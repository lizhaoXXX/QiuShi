<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_state_color</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/title_state_color</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_text_size" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- name 是Style的名称，parent 继承那个父类样式 -->
    <style name="theme_fullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>


    <!--ME-->
    <style name="me_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">@dimen/me_margin_top</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">@dimen/me_padding_start</item>
        <item name="android:textColor">@color/color_text_black</item>

    </style>


    <!--动画-->

    <!--从右向左展开的scale动画-->
    <style name="rightAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_right_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_right_exit</item>
    </style>

    <!--从左向右展开的scale动画-->
    <style name="leftAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_left_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_left_exit</item>
    </style>

    <!--从上到下展开的scale动画-->
    <style name="topToBottomScaleAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_top_to_bottom_scale_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_top_to_bottom_scale_exit</item>
    </style>

    <!--从下到上展开的scale动画-->
    <style name="bottomToTopScaleAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_to_top_scale_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_to_top_scale_exit</item>
    </style>



    <!--alpha,translate动画集合-->
    <style name="demoSetAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_translate_and_translate_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_translate_and_translate_exit</item>
    </style>
</resources>
