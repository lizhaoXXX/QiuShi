<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_state_color</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/title_state_color</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_text_size" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- name 是Style的名称，parent 继承那个父类样式 -->
    <style name="theme_fullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>
</resources>
